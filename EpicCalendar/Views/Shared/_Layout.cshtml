<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EpicCalendar</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Default.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="text-center">
        <div class="btn-group " role="group" aria-label="...">
            <button type="button" class="btn btn-default">Übersicht</button>
            <button type="button" class="btn btn-default">Zukünftige Ereignisse</button>
            @if (Session["CurrentUser"] == null)
            {
                <button type="button" class="btn btn-default">Anmelden</button>
            }
            else
            {
                <button type="button" class="btn btn-default">Profil</button>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>